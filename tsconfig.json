{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noStrictGenericChecks": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "es2015.proxy"
    ]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
